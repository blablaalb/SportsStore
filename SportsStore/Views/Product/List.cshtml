@{
}
@model ProductsListViewModel // The @model expression specifies that the view will receive a sequence of Product objects from the action method as its model data

@foreach (var p in Model.Products)
{
    <div class="card">
        <h3>
            <strong>@p.Name</strong>
            <span class="float-start badge bg-primary">@p.Price.ToString("c")</span>
        </h3>
        <span class="lead">@p.Description</span>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true" page-class="btn" page-class-normal="btn-default" page-class-selected="btn-primary" class="btn-group float-end"></div>